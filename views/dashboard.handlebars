{{#if logged_in}}
  <h1>Welcome to Your Dashboard, {{username}}!</h1>
  <div class="container"><h2>Your Posts</h2>
    <button id="new-post">New Post</button>
    <section id="posts">
        {{#each posts}}
            <a href="#" class="post-title" data-id="{{this.id}}">
          <h5>{{this.title}}</h5>
        </a>
        {{/each}}
    </section>

    <form id="post-form" style="display:none;">
        <input type="text" name="title" placeholder="Post Title">
      <textarea name="content" placeholder="Post Content"></textarea>
      <button type="submit">Save</button>
      <button type="button" id="delete-post">Delete</button>
      <button type="button" id="back-btn">Back</button>
    </form>
</div>

{{else}}
    <p>You need to <a href="/login">log in</a> to view this page.</p>
{{/if}}

  <script src="/js/dashboard.js"></script>